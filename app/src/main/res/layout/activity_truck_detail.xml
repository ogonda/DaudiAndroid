                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_c6" />


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/et_c7_type"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="EMPTY"
                    android:textColor="@color/grey_500"
                    android:textColorHint="@color/grey_500"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/et_c7_qty"
                    app:layout_constraintStart_toEndOf="@+id/tv_c7"
                    app:layout_constraintTop_toBottomOf="@id/tv_c6"
                    tools:layout_editor_absoluteY="627dp" />

            <EditText
                    android:id="@+id/et_c7_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Enter Amount"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/text_prefered_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/et_c7_type"
                    app:layout_constraintTop_toBottomOf="@id/tv_c6"
                    tools:layout_editor_absoluteY="627dp" />


            <View
                    android:id="@+id/v_bottom_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/colorDivider"
                    android:textSize="@dimen/text_prefered_size"
                    app:layout_constraintLeft_toLeftOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_c7" />


            <TextView
                    android:id="@+id/tv_auth_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="AUTHORIZED BY"
                    android:textSize="@dimen/text_prefered_size"
                    app:layout_constraintLeft_toLeftOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/v_bottom_separator" />


            <TextView
                    android:id="@+id/tv_auth_by_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/text_prefered_size"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintTop_toBottomOf="@id/v_bottom_separator"
