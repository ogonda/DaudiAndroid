                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Enter Driver Name"
                    android:inputType="textFilter|textNoSuggestions|textMultiLine"
                    android:maxLines="3"
                    android:textColor="@color/grey_500"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/text_prefered_size"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_driver_name"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer" />


            <TextView
                    android:id="@+id/tv_driver_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="DRIVER ID/PASSPORT"
